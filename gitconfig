[global]
    gpg = $(which gpg)
[core]
	editor = vim
	excludesfile = ~/.gitignore_global

[diff]
        tool = vimdiff

[push]
	default = current

[alias]
	st = status
    co = checkout
	ci = commit
	br = !branches.sh
    la = log --graph --abbrev-commit --decorate --format=format:'%C(red)%h(red)%C(red)%C(auto)%d%C(reset) %C(normal)%s%C(reset) %C(white)%an%C(white) %C(green)(%ar)' --date=relative --all
    lo = log --graph --abbrev-commit --decorate --format=format:'%C(red)%h%C(red)%C(auto)%d%C(reset) %C(normal)%s%C(reset) %C(white)%an%C(white) %C(green)(%ar)' --date=relative
    la = log --graph --abbrev-commit --decorate --oneline --date=relative --all
    alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\t=> \\2/' | sort
    viz= "!f() { echo 'digraph git {' ; git log --pretty='format:  %h -> { %p }' \"$@\" | sed 's/[0-9a-f][0-9a-f]*/\"&\"/g' ; echo '}'; }; f"

[color]  
	ui = auto
    
[color "branch"]
    current = green 
    local = cyan
    remote = red

[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold

[color "status"]    
        added = yellow
        changed = green
        untracked = cyan

[branch]  
        autosetuprebase = always

[user]
	name = Tehseen
	email = tehseen.abbas@seb.dk
[gpg]
	program = /usr/local/bin/gpg
