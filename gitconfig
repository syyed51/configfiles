[global]
    gpg = $(which gpg)

[core]
    editor = vim
    excludesfile = ~/.gitignore
    ignorecase = true

[diff]
    tool = vimdiff

[push]
    default = current

[alias]
    st = status
    co = checkout
    ci = commit --verbose
    br = !branches.sh
    la = log --graph --abbrev-commit --decorate --oneline --date=relative --notes --branches --tags --exclude=refs/stash
    lt = log --graph --abbrev-commit --decorate --oneline --date=relative 
    dc = diff --cached

    lst = !git ls --since=yesterday
    la = log --graph --abbrev-commit --decorate --oneline --date=relative --all
    alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\t=> \\2/' | sort
    viz= "!f() { echo 'digraph git {' ; git log --pretty='format:  %h -> { %p }' \"$@\" | sed 's/[0-9a-f][0-9a-f]*/\"&\"/g' ; echo '}'; }; f"
    sup = submodule update --init --recursive
    clz = clone --recursive
    diff  = diff --word-diff
    fl = diff-tree --no-commit-id --name-only -r
    fa = show --stat --oneline
    ff = show --name-only --oneline
    ls = log --graph --abbrev-commit --decorate --format=format:'%C(auto)%h %d %C(auto)%s %C(dim yellow italic)<%an>%Creset %C(yellow italic)(%ar)' --date=relative --notes --branches --tags --exclude=refs/stash
    lo = log --graph --abbrev-commit --decorate --format=format:'%C(auto)%h %d%C(auto)%s %C(dim yellow italic)<%an>%Creset %C(yellow italic)(%ar)' --date=relative  --notes --tags --exclude=refs/stash
    assume = update-index --assume-unchanged
    unassume = update-index --no-assume-unchanged
    assumed = "!git ls-files -v | grep ^h | cut -c 3-"
    unassumeall = "!git assumed | xargs git update-index --no-assume-unchanged"
    assumeall = "!git st -s | awk {'print $2'} | xargs git assume"

    ours = "!f() { git co --ours $@ && git add $@; }; f"
    theirs = "!f() { git co --theirs $@ && git add $@; }; f"


[color]
    ui = auto

[color "branch"]
    current = green 
    local = cyan
    remote = red

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]    
    added = yellow
    changed = green
    untracked = cyan

[branch]  
    autosetuprebase = always

[gpg]
    program = /usr/local/bin/gpg

[credential]
    helper = osxkeychain

[user]
    name = Tehseen
    email = tehseen.abbas@seb.dk

[init]
	templatedir = ~/.git-templates
[merge]
	tool = opendiff
